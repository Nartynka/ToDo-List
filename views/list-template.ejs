<%- include("header") -%> 

      <h1>
         <%=listTitle%>
      </h1>
   </div>

   <div class="box">
      <% newItems.forEach(item => {%>
      <form action="/delete" method="post">
         <div class="item">
            <input type="checkbox" class="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
            <p><%= item.task %></p>
            <input type="hidden" name="listTitle" value="<%=listTitle%>">
         </div>
      </form>
      <%})%>

      <form class="item" action="/" method="post">
         <input type="text" placeholder="e.g. Buy Milk" name="newTask" autofocus autocomplete="off" required>
         <button type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>
   </div>


   <%- include("footer") -%> 